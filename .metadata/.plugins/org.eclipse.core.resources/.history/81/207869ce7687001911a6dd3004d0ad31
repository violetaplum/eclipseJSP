 var name = getElementByName("name")
 var year = getElementByName("year")

 function Get(name,year)
 {
   if(name.equals("")|| !String.valueOf(name.getClass()).contains("String") || request.getParameter("year").length()!=4)
   {
	   alert("이름 혹은 생일을 다시 입력해 주세요..");
	   setTimeout(function(){
	 	  window.location.href="./inputAge.jsp"
	   }
	 	  ,0)
   }
   else
	   {
	   window.location.href="./hello.html"
	   }
 }


</script>
