<%@page import="java.sql.PreparedStatement"%>
<%@page import="java.sql.DriverManager"%>
<%@page import="java.sql.Connection"%>
<%@page import="java.sql.ResultSet" %>
<%@page import="java.util.ArrayList" %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%request.setCharacterEncoding("utf-8");%>
<style>
  body
  {
    background: #c166a1;
    align:center;
  }
  </style>
 
<%
String selected = (String)request.getParameter("select");
int salary = Integer.parseInt(request.getParameter("salary"));
%>

<%
Connection conn = null;
String url = "jdbc:oracle:thin:@localhost:1521:xe";
String user = "hr";
String password = "hr";
PreparedStatement ps1 = null;
PreparedStatement ps2 = null;
ArrayList<String> array = new ArrayList<>();
//사번 이름 급여 부서명


try
{
  Class.forName("oracle.jdbc.driver.OracleDriver");
  conn = DriverManager.getConnection(url,user,password);
  String str = "select * from departments natural join employees where department_name like ? and salary=?";
  
  ps1=conn.prepareStatement(str); 
  ps1.setString(1,selected);
  ps1.setInt(2,salary);
  
  ResultSet rss = ps1.executeQuery(); 

   %>
<h2>해당 부서의 사원 정보 출력</h2>
   <table border=2>
   <tr>
   <td>사번</td><td>이름</td><td>급여</td><td>부서명</td>
   </tr>
   <%
	while(rss.next())
	{
		%>
		<tr><td><%=rss.getInt("EMPLOYEE_ID") %></td><td><%=rss.getString("FIRST_NAME")+" "+rss.getString("LAST_NAME") %></td><td><%=rss.getInt("SALARY") %></td><td><%=rss.getString("DEPARTMENT_NAME") %></td>	
		<%
	}
   
}
catch(Exception e)
{
  e.getStackTrace();
}
finally
{
  try
  {
    if(ps1!=null)
    {
      ps1.close();
    }
    if(conn!=null)
    {
      conn.close();
    }
  }
  catch(Exception e2)
  {
    e2.getStackTrace();
  }
}

%>
   </table>
  
   </form>

